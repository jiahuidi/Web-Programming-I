<div class="row">
  <div class="col-sm-12">
    <form id="static-form" method="post">
      <div class="form-group">
        <label for="phrase">Enter the phrase here:  </label>
        <input type="string" class="form-control" id="phrase" name="phrase" placeholder="The phrase to be checked" value="{{phrase}}">
      </div>

      <div class="form-group hidden" id="error-container">
        <div class="alert alert-danger text-goes-here">
        </div>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>

      <div class="form-group hidden" id="result-container">
        <div class="alert alert-success text-goes-here">
        </div>
      </div>

      <div class="form-group" id="results-container">
        <h3>Checked phrases</h3>
        <div class="results">
          <ul id="results-list">
          </ul>
        </div>           
      </div>
      
    </form>
  </div>
</div>